<applications xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="CertificateRequest.xsd">
    <application>
        <truststores>
            <truststoreonly>
                <trustprofilename>EPPKI_pushfile_TP</trustprofilename>
                <truststore>
                    <base64truststore>
                        <storealias>ftpesCA</storealias >
                        <storelocation>/ericsson/ftps/data/certs/rootCaCert.pem</storelocation>
